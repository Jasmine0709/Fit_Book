<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fit Book"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <!-- Section for starting a new workout -->
        <LinearLayout
            android:id="@+id/workoutSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_name"
            android:layout_marginTop="66dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start a New Workout"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Checkboxes for selecting muscle groups -->
            <CheckBox
                android:id="@+id/chestCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest" />

            <CheckBox
                android:id="@+id/backCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />

            <CheckBox
                android:id="@+id/legsCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legs" />

            <CheckBox
                android:id="@+id/shouldersCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoulders" />

            <CheckBox
                android:id="@+id/armsCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms" />

            <CheckBox
                android:id="@+id/absCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abs" />

            <CheckBox
                android:id="@+id/cardioCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardio" />

        </LinearLayout>

        <!-- Section for updating body measurements -->
        <LinearLayout
            android:id="@+id/bodyMeasurementsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/workoutSection"
            android:layout_margin="16dp"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Body Measurements"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/updateMeasurementsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update" />

        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>