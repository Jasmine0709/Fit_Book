<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- App name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fit Book"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Section for adding a new exercise -->
    <LinearLayout
        android:id="@+id/addExerciseSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a New Exercise"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="46dp"/>

        <!-- Form for adding exercise -->
        <EditText
            android:id="@+id/exerciseNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exercise Name" />

        <EditText
            android:id="@+id/repsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reps" />

        <EditText
            android:id="@+id/setsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Sets" />

        <EditText
            android:id="@+id/weightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight Added" />

        <Button
            android:id="@+id/submitExerciseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Exercise" />

    </LinearLayout>

    <!-- Section for displaying existing exercises -->
    <LinearLayout
        android:id="@+id/existingExercisesSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addExerciseSection"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Existing Exercises"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Mock exercises -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Exercise 1: Bench Press - 10 reps x 3 sets, 50kg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Exercise 2: Squats - 12 reps x 4 sets, 60kg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Exercise 3: Deadlifts - 8 reps x 3 sets, 70kg" />

        <!-- Add more TextViews for additional exercises as needed -->

    </LinearLayout>

</RelativeLayout>